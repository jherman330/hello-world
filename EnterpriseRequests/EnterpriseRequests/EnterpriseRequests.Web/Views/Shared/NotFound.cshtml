@using EnterpriseRequests.Web.Security
@{
    ViewBag.Title = "NotFound";
}

@section menuViews
{
    @Html.Partial("_MenuViews", "")
}

@section sidebarViews
{
    @Html.Partial("_SidebarViews", "")
}

@if (User.IsAdmin())
{
    @section menuAdmin
    {
        @Html.Partial("_MenuAdmin", "")
    }

    @section sidebarAdmin
    {
        @Html.Partial("_SidebarAdmin", "")
    }
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="jumbotron">
            <div class="container">
                <div class="row">
                    <div class="col-lg-11 col-md-11">
                        <h2><span class="glyphicon glyphicon-warning-sign" style="margin-right: 1em;"></span>Whoops! We could not find the page you were looking for.</h2>
                    </div>
                </div>
                <div class="row top-buffer">
                    <div class="col-lg-4 col-md-4">
                        @Html.ActionLink("Take me to the Home Page", "Index", "Home", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
